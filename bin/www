#!/usr/bin/env node

var app = require('../app');
var debug = require('debug')('smart-bottle:server');
var http = require('http');

const loadEnv = require('../config/env');
// 환경변수 로드
loadEnv();

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;
  }

  if (port >= 0) {
    return port;
  }

  return false;
}

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

var server = http.createServer(app);

// Socket.IO 초기화
const { Server } = require('socket.io');
const io = new Server(server, {
  cors: {
    origin: '*',
    methods: ['GET', 'POST']
  },
  transports: ['websocket', 'polling'],
  allowEIO3: true,  // Engine.IO v3 지원 (Arduino 호환성)
  pingTimeout: 60000,
  pingInterval: 25000
});

// Socket.IO를 app에 저장하여 라우트에서 접근 가능하게
app.set('io', io);

// Socket 핸들러 로드
const socketHandler = require('../app/socket/socket_handler');
socketHandler(io);

// 모든 인터페이스에서 listen
server.listen(port, '0.0.0.0', () => {
  console.log(`Server listening on 0.0.0.0:${port} (All interfaces)`);
  console.log(`Try accessing from Arduino: http://172.20.10.1:${port}/`);
});
server.on('error', onError);
server.on('listening', onListening);

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
      ? 'Pipe ' + port
      : 'Port ' + port;

  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
      ? 'pipe ' + addr
      : 'port ' + addr.port;
  debug('Listening on ' + bind);
  console.log(`Server running on port ${port}`);
}
