            font-weight: 700;
            color: var(--gray-800);
        }

        .recommendation-meta {
            display: flex;
            gap: var(--space-2);
            margin-top: 8px;
            padding-top: var(--space-1);
        }

        .meta-item {
            flex: 1;
        }

        .meta-label {
