        :root {
            --primary: #003876;
            --primary-light: #0052A3;
            --primary-lighter: #E8F1F8;
            --primary-dark: #002855;
            --accent-purple: #667eea;
            --accent-purple-dark: #764ba2;
            --success: #22543d;
            --success-light: #c6f6d5;
            --warning: #d69e2e;
            --warning-light: #fefcbf;
            --error: #c53030;
            --error-light: #fed7d7;
            --info: #2b6cb0;
            --info-light: #bee3f8;
            --gray-50: #f8f9fa;
            --gray-100: #f7fafc;
            --gray-200: #e2e8f0;
            --gray-300: #cbd5e0;
            --gray-400: #a0aec0;
            --gray-500: #718096;
            --gray-600: #4a5568;
            --gray-700: #2d3748;
            --gray-800: #1a202c;
            --space-1: 8px;
            --space-2: 16px;
            --space-3: 24px;
            --space-4: 32px;
            --font-base: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            --radius-md: 8px;
            --radius-lg: 12px;
            --radius-xl: 16px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-base);
            background: var(--gray-50);
            color: var(--gray-800);
            line-height: 1.6;
        }

        /* Header */
        .header {
            background: white;
            border-bottom: 1px solid var(--gray-200);
            box-shadow: var(--shadow-sm);
        }

        .header-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: var(--space-2) var(--space-3);
            display: flex;
            align-items: center;
        }

        .logo {
            font-size: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 48px;
            height: 48px;
            background: var(--primary-lighter);
            border-radius: var(--radius-lg);
            margin-right: var(--space-2);
        }

        .header-title h1 {
            font-size: 20px;
            font-weight: 700;
            color: var(--gray-800);
            margin-bottom: 2px;
        }

        .header-title p {
            font-size: 13px;
            color: var(--gray-500);
        }

        /* Container */
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: var(--space-3);
        }

        /* Back Button */
        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px var(--space-2);
            background: var(--primary);
            color: white;
            text-decoration: none;
            border-radius: var(--radius-md);
            font-weight: 600;
            font-size: 13px;
            margin-bottom: var(--space-2);
            transition: all 0.2s;
        }

        .back-button:hover {
            background: var(--primary-dark);
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

        /* Alert */
        .alert {
            padding: var(--space-2);
            border-radius: var(--radius-md);
            margin-bottom: var(--space-2);
            display: flex;
            align-items: flex-start;
            gap: var(--space-2);
        }

        .alert-warning {
            background: var(--warning-light);
            border: 1.5px solid var(--warning);
            color: #744210;
        }

        .alert-error {
            background: var(--error-light);
            border: 1.5px solid var(--error);
            color: var(--error);
        }

        .alert-icon {
            font-size: 20px;
            flex-shrink: 0;
        }

        .alert-content h3 {
            font-size: 15px;
            font-weight: 700;
            margin-bottom: 4px;
        }

        .alert-content p {
            font-size: 13px;
            margin-bottom: 8px;
        }

        .alert-content a {
            color: inherit;
            text-decoration: underline;
            font-weight: 600;
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: var(--space-2);
            margin-bottom: var(--space-3);
        }

        .stat-card {
            background: white;
            padding: var(--space-2);
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-sm);
            border-left: 3px solid var(--primary);
        }

        .stat-label {
            font-size: 12px;
            font-weight: 600;
            color: var(--gray-500);
            margin-bottom: 6px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-value {
            font-size: 28px;
            font-weight: 700;
            color: var(--primary);
            display: flex;
            align-items: baseline;
            gap: 6px;
        }

        .stat-unit {
            font-size: 14px;
            font-weight: 600;
            color: var(--gray-600);
        }

        /* Section Card */
        .section-card {
            background: white;
            padding: var(--space-3);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-sm);
            margin-bottom: var(--space-2);
        }

        .section-title {
            font-size: 16px;
            font-weight: 700;
            color: var(--gray-800);
            margin-bottom: var(--space-2);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* AI Insights */
        .insights-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: var(--space-2);
        }

        .insight-item {
            padding: var(--space-2);
            background: var(--gray-50);
            border-radius: var(--radius-md);
            border: 1.5px solid var(--gray-200);
        }

        .insight-label {
            font-size: 12px;
            font-weight: 600;
            color: var(--gray-600);
            margin-bottom: 4px;
        }

        .insight-value {
            font-size: 16px;
            font-weight: 700;
            color: var(--primary);
        }

        /* Comparison Table */
        .comparison-table {
            width: 100%;
            border-collapse: collapse;
        }

        .comparison-table th,
        .comparison-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid var(--gray-200);
        }

        .comparison-table th {
            background: var(--gray-50);
            font-size: 12px;
            font-weight: 700;
            color: var(--gray-700);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .comparison-table td {
            font-size: 14px;
        }

        .comparison-value {
            font-weight: 600;
            color: var(--primary);
        }

        .comparison-diff {
            font-size: 12px;
            padding: 4px 8px;
            border-radius: var(--radius-md);
            font-weight: 600;
        }

        .diff-positive {
            background: var(--success-light);
            color: var(--success);
        }

        .diff-neutral {
            background: var(--gray-200);
            color: var(--gray-700);
        }

        /* Recommendation Card */
